<h1>Update Pet</h1>


<form  action="/pets/<%= @pet.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="pet_name">Name:</label>
  <input type="text" name="pet[name]" value="<%= @pet.name %>" id="pet_name">

  <br>

  <% Owner.all.each do |owner| %>

    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>"<%= 'checked' if @pet.owner.name == owner.name   %>><%=owner.name%></input>
  <% end %>
<input type="submit" value="Update Pet">
  <br>
  <h3>Create Owner</h3>


  <br>

  <label>and/or create a new owner:</label>
   <br>
   <label>name:</label>
     <input  type="text" name="owner[name]" id="owner_name"></input>
   <br>
  <input type="submit" value="Create Owner">
</form>
